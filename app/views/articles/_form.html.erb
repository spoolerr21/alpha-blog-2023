<div class="container">
    <div class="col-10">
        <%= render 'shared/errors' %>

        <div class="row justify-content-center">
            <%= form_with(model: @article, class: "shadow p-3 mb-3 bg-secondary rounded", local:true) do |f| %>
                <div class="form-group row" id="form-container">
                    <%= f.label :title, class: "col-2 col-form-label text-light" %>
                    <div class="col-10">
                        <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of article" %>
                    </div>
                </div>
                
                <div class="form-group row" id="form-container">
                    <%= f.label :description, class: "col-2 col-form-label text-light" %>
                    <div class="col-10">
                        <%= f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Description of article" %>
                    </div>
                </div>
                <div class="form-group row" id="form-container">
                    <div class="d-flex justify-content-center">
                        <%= f.submit class: "btn btn-outline-light btn-lg" %>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
    <div class="container d-flex justify-content-center" id="form-container">
        <%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "text-dark" %>
    </div>
</div>